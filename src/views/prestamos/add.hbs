<div class="content-wrapper">
    
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1> Lectores</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/principal">Inicio</a></li>
              <li class="breadcrumb-item"><a href="/prestamos">Prestamos</a></li>
              <li class="breadcrumb-item active">Agregar</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- contenedor -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Registrar Prestamo</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool .btn-flat" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i></button>
              
              </div>              
            </div>
            

            <div class="card-body">
            <form action="/prestamos/add/{{libro.id_libro}}" method="POST">
 <div class="form-row">
    <div class="form-group col-md-6">
      <label >Cedula de identidad  del Lectore</label>
      <input type="text" class="form-control" name="ci" placeholder="Cedula de identidad" autofocus required>
    </div>
    
  </div>

 <div class="form-row">
    <div class="form-group col-md-6">
      <label >ISBN</label>
      <input type="text" class="form-control" value="{{libro.isbn_libro}}" disabled>
    </div>
    <div class="form-group col-md-6">
      <label >Autor</label>
      <input type="text" class="form-control" value="{{libro.autor_libro}}" disabled >
    </div>
  </div>
  
 
  <div class="form-row">
    <div class="form-group col-md-6">
      <label >Titulo</label>
      <input type="text" class="form-control" value="{{libro.titulo_libro}}" disabled>
    </div>
  
    <div class="form-group col-md-3">
      <label >Fecha Prestamo</label>
      <input type="date" class="form-control" name="fechaprestamo" required>
    </div>
    <input type="hidden" name="id_usuario" value="{{user.id_usuario}}">
    
  </div>
  
  <button type="submit" class="btn btn-primary">Guardar</button>
  
  
</form>
            </div>
            
          </div>
         
        </div>
      
      </div>
    
    </section>
  
  </div>
</div>
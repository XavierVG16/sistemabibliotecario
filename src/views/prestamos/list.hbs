<div class="content-wrapper">
    
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Prestamos</h1>
          </div>
         <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Inicio</a></li>
              <li class="breadcrumb-item active">Prestamos</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- contenedor -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Lista de Libros</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool .btn-flat" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i></button>
             
              </div>              
            </div>
          

            <div class="card-body table-responsive  ">

           
              <table  class="table table-bordered table-hover  AllDataTables">
                <thead>
                <tr>
                 
                  <th>Codigo</th>
                  <th>ISBN</th>
                  <th>Titulo</th>
                  <th>Autor</th>
                  <th>AÃ±o Publicacion</th>
                  <th>Categoria</th>
                
                  <th>Estado</th>
                  <th>Accion</th>
                  
                </tr>
                </thead>
                <tbody>
                    {{#each libros}}
                    
                      <tr>
                  
                  <td>{{codigo_libro}}</td>
                  <td>{{isbn_libro}}</td>
                  <td>{{titulo_libro}}</td>
                  <td>{{autor_libro}}</td>
                  <td>{{publicacion_libro}}</td>
                
                  <td>{{nombre}}</td>
                  <td>{{descripcion}}</td>
                  <td><a href="/prestamos/add/{{id_libros}}"  class="btn btn-info btn-sm">

	Selecionar</a> 
	</td>
                  
                </tr>
                {{/each}}
    
                </tbody>
              
              </table>
            </div>
            
          </div>
         
        </div>
      
      </div>
    
    </section>
  
  </div>
</div>
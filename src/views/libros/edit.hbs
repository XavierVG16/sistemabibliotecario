<div class="content-wrapper">
    
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1> Libros</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/principal">Inicio</a></li>
              <li class="breadcrumb-item"><a href="/libros">Libros</a></li>
              <li class="breadcrumb-item active">Agregar</li>
            </ol>
          </div>
        </div>
      </div>
    </section>

    <!-- contenedor -->
    <section class="content">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title">Agregar Libro</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool .btn-flat" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i></button>
              
              </div>              
            </div>
            

            <div class="card-body">
            <form action="/libros/edit/{{libro.id_libros}}" method="POST">

 <div class="form-row">
    <div class="form-group col-md-6">
      <label >Codigo</label>
      <input type="text" value="{{libro.codigo_libro}}" class="form-control" name="codigo_libro" placeholder="Codigo" autofocus>
    </div>
    <div class="form-group col-md-6">
      <label >ISBN</label>
      <input type="text" value="{{libro.isbn_libro}}" class="form-control" name="isbn_libro" placeholder="ISBN Libro">
    </div>
  </div>

 <div class="form-row">
    <div class="form-group col-md-6">
      <label >Titulo</label>
      <input type="text" value="{{libro.titulo_libro}}" class="form-control" name="titulo_libro" placeholder="Titulo">
    </div>
    <div class="form-group col-md-6">
      <label >Stock</label>
      <input type="text" value="{{libro.stock_libro}}" class="form-control" name="stock_libro" placeholder="Stock">
    </div>
  </div>
   <div class="form-row">
    <div class="form-group col-md-6">
      <label >Autor</label>
      <input type="text" value="{{libro.autor_libro}}" class="form-control" name="autor_libro" placeholder="Autor">
    </div>
    <div class="form-group col-md-6">
      <label >Año de Publicacion</label>
      <input type="text"value="{{libro.publicacion_libro}}" class="form-control" name="publicacion_libro" placeholder="Año de Publicacion">
    </div>
  </div>
<div class="form-row">
    <div class="form-group col-md-6">
      <label >Editorial</label>
      <input type="text" value="{{libro.editorial_libro}}" class="form-control" name="editorial_libro" placeholder="Editorial">
    </div>
    <div class="form-group col-md-6">
      <label >Ediccion</label>
      <input type="text"  value="{{libro.ediccion_libro}}"class="form-control" name="ediccion_libro" placeholder="Edicion">
    </div>
  </div>

    <div class="form-row">
    <div class="form-group col-md-6">
      <label >Idioma</label>
      <input type="text" value="{{libro.idioma_libro}}" class="form-control" name="idioma_libro" placeholder="Idioma">
    </div>
    <div class="form-group col-md-6">
      <label >Ejemplares</label>
      <input type="text" value="{{libro.ejemplares_libro}}"class="form-control" name="ejemplares_libro" placeholder="Ejemplares">
    </div>
  </div>
 
  <div class="form-row">
   
  
    <div class="form-group col-md-6">
      <label >Categoria</label>
      <select name="facultad" class="form-control">
        <option selected>{{libro.tipo}}</option>
        
          {{#each carrera}}
         
        <option>{{nombre}}</option>
        
         {{/each }}
        
         
       
      </select>
    </div>
  </div>
  
  <button type="submit" class="btn btn-primary">Guardar</button>
  
  
</form>
            </div>
            
          </div>
         
        </div>
      
      </div>
    
    </section>
  
  </div>
</div>